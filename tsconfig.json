{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@modules/*": ["src/modules/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/qdrant.controller.spec.ts",
    "test/qdrant.service.spec.ts",
    "test/product-normalization.service.spec.ts",
    "test/image-preprocessor.service.spec.ts",
    "test/gpt4.service.spec.ts",
    "test/google-vision.service.spec.ts",
    "test/gemini.service.spec.ts",
    "test/gemini-multimodal.service.spec.ts",
    "test/excel-processing.service.spec.ts",
    "test/embedding.service.spec.ts",
    "test/catalog-processing.controller.spec.ts",
    "test/etl-proxy.service.spec.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
